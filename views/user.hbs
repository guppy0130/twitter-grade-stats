{{#> base}}

{{#* inline "styles"}}
<style>
    td, th {
        border: 1px solid black;
        padding: 0.2em;
    }
    table {
        margin-top: 1em;
        border-collapse: collapse;
    }
    .table-grade-entry {
        text-align: right;
    }
</style>
