{{#> base}} {{#* inline "styles"}}
<style>
    body {
        margin: 0;
        padding: 0;
    }

    #particle-container {
        z-index: -1;
        height: 100vh;
        background-color: #415A77;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    #particle-protect {
        display: flex;
        flex-direction: column;
        padding: 0 1em 1em 1em;
        border-radius: 3px;
        color: white;
        text-align: center;
        z-index: 1;
    }

    .particles-js-canvas-el {
        position: absolute;
        z-index: 0;
    }

    h1 {
        text-transform: uppercase;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    input {
        font-family: 'sunflower', sans-serif;
    }

    input:not([type]) {
        width: calc(100% - 0.8em);
        margin-bottom: 1em;
        border: none;
        text-align: center;
        padding: 0.4em;
        font-size: 1.6em;
        border-radius: 3px;
    }

    input[type="submit"] {
        width: 100%;
        padding: 0.6em;
        border: 0px;
        background-color: white;
        text-transform: uppercase;
        transition: 0.2s;
        cursor: pointer;
        border-radius: 3px;
        font-size: 1.4em;
    }

    input[type="submit"]:hover {
        background-color: rgba(54, 162, 235, 0.5);
        color: white;
    }

</style>
{{/inline}} {{#* inline "content"}}
<div id="particle-container">
    <div id="particle-protect">
        <h1>{{title}}</h1>

        <form action='/user/' method="get">
            <input id="username" name="username" placeholder="Twitter handle">
            <input type="submit" value="Get Grades">
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.js" integrity="sha256-icjghcPaibMf1jv4gQIGi5MeWNHem2SispcorCiCfSg=" crossorigin="anonymous"></script>
<script>
    particlesJS.load('particle-container', '/particles.json')

</script>
{{/inline}} {{/base}}
