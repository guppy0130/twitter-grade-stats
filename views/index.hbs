{{#> base}}

{{#* inline "styles"}}
<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 90vh;
        overflow-y: hidden;
    }
    h1 {
        text-transform: uppercase;
    }
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }
    input {
        font-family: 'sunflower', sans-serif;
    }
    input:not([type]) {
        width: calc(100% - 0.8em);
        margin-bottom: 1em;
        border: none;
        border-bottom: 1px solid black;
        text-align: center;
        padding: 0.4em;
        font-size: 1.6em;
    }
    input[type="submit"] {
        width: 100%;
        padding: 1em;
        border: 1px solid black;
        background-color: white;
        text-transform: uppercase;
        transition: 0.2s;
        cursor: pointer;
        border-radius: 3px;
    }
    input[type="submit"]:hover {
        background-color: rgba(54, 162, 235, 0.5);
        color: white;
    }
</style>
{{/inline}}

{{#* inline "content"}}
<form action='/user/' method="get">
	<input id="username" name="username" placeholder="Twitter handle">
	<input type="submit">
</form>
{{/inline}}
{{/base}}
